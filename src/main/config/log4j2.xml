<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" name="ConfluenceURLPatch">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%m%n" />
        </Console>
        <RollingFile name="RollingFile" fileName="ConfluenceURLPatch.log" filePattern="ConfluenceURLPatch.%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="500 MB" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="com.igsl" level="debug" additivity="false">
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="com.igsl.ConfluenceURLTransform" level="info" additivity="false">
            <AppenderRef ref="RollingFile" />
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>